<div
  style='position:sticky; top:0; left:0; width:100%; height:100%; z-index:99; background-color:gray'
>
  <div
    style='width:90vh; padding:20px; box-shadow: 2px 2px 50px 11px rgba(34, 60, 80, 0.2); position:fixed; background-color:white; z-index: 100; left:27%; top: 20%; border-radius:5px;'
  >
    <div id='usersFavoritesList' style='height:500px; overflow:auto'>

      <div id='overflowContainer'>

        <ul
          id='chatPageWindow'
          class='list-group list-group-flush'
          style='width:130vh; margin-bottom:30px;'
        >
          {{#each bars}}
            <li
              class='list-group-item'
              style='display:flex; justify-content:start'
            >
              <div>{{bar_type}}
                <b>{{bar_title}}.</b>
                Адрес:
                {{bar_city}},
                {{bar_street}}
                {{bar_house}}
              </div>
            </li>
          {{/each}}
        </ul>
      </div>

    </div>
    <br />
    <div style='display: flex; justify-content: center'>
      <a id='cancelButton4' class='btn btn-outline-dark'>Отменить</a>
    </div>
  </div>
</div>
